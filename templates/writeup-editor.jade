extends frame
{% load staticfiles %}

block container
  .row
    .col-md-10
      textarea#editor(autofocus)
      button#submitBtn.btn.btn-success.pull-right(style='margin-top: 10px;') Submit
      ul.list-inline
        li: h4 Challenge
        li(style='width: 150px;')
          select#SList.form-control
            option(value='-1') Select Source
            for item in sources
              option(value=item)= item
            option(value='') Others
        li: h4 /
        li(style='width: 150px;')
          select#CList.form-control
        li: h4 Title
        li(style='width: 350px;')
          input#title.form-control
        li: i.fa.fa-spiner.fa-spin(style='displa: none;')
      br
      #submitSuccess.alert.alert-success(style='margin-bottom: 0; marigin-top: 10px; padding: 7px 15px; display: none;') Writeup Submit Succeeded
      #submitFail.alert.alert-danger(style='margin-bottom: 0; marigin-top: 10px; padding: 7px 15px; display: none;') Writeup Submit Failed
    .col-md-2
      .panel.panel-default
        .panel-heading Uploaded Images
        ul.list-group
        .panel-footer
          a.btn.btn-xs.btn-info.pull-right(href='#modal-container', data-toggle='modal')
            | Upload&nbsp;
            i.fa.fa-cloud-upload
          | &nbsp;

      #modal-container.modal.fade(aria-hidden='true', style='top: 60px;')
        .modal-dialog: .modal-content
          .modal-header
            button.close(aria-hidden='true', data-dismiss='modal') Ã—
            h4.modal-title Upload Image
          .modal-body
            .row
              .col-xs-6
                label Name
                input#imageName.form-control
              .col-xs-6
                label File
                input#imageFile.form-control(type='file', name='img')
          .modal-footer.row
            .col-xs-9
              #uploadSuccess.alert.alert-success.pull-left(style='margin-bottom: 0; marigin-top: 10px; padding: 7px 15px; display: none;') Image Upload Succeeded
              #uploadFail.alert.alert-danger.pull-left(style='margin-bottom: 0; margin-top: 10px; padding: 7px 15px; display: none;') Image Upload Failed
            .col-xs-3
              button#uploadBtn.btn.btn-info Upload

