extends frame.jade
{% load staticfiles %}

mixin personalInfo(key, value, icon)
  ul.list-inline
    li(style='width: 20px;'): i.fa.fa-lg(class='fa-#{icon}')
    li(style='width: 100px;'): h5 &nbsp;#{key}&nbsp;
    li: h5 #{value}

mixin chartLabel(label, color)
  li: ul.list-inline
    li(style='width: 10px; height: 10px; background-color: #{color}')
    li= label

